
 page{
     height: 100%;
 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #efefef;

}
.nav{
    position: relative;
    z-index: 99;
    display: flex;
    width: 100%;
    box-shadow: 2px 2px 5px #cc4d31;
    background-color: #fe4c40;
    border-radius:0px 0px 5px 5px;
}
.nav-son{
  color: #fff;
    z-index: 99;
    display: flex;
    flex: 1;
    text-align: center;
    height: 45px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}

.content{
    display: inline-block;
    font-size: 35rpx;
}

.temp{
    position: absolute;
    z-index: 4;
}
.temp1{
    display: none;
    width: 100%;
    max-height: 550rpx;
    overflow-y: scroll;
    line-height:100rpx;
    background: #fff;
}
.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    line-height:100rpx;
    background: #fff;
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    
    border-bottom: 1px solid #efefef;
    
    font-size: 14px;
    color: #666;
}

.current{
    background: #e0e0e0;
}
.current2{
    background: #fff;
}
.fullbg{
    display:none;
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    
}
.fullopacity{
    display:flex;
    opacity: .5;
}
.nav-son.active .content{
    color: #fff;
}


.logo{
  width: 120rpx;
  height: 120rpx;
  top: -60rpx;
  position: absolute;
  margin-left: -60rpx;
    z-index: 101;
}

 .firstOpen{
  z-index: 100;
   position: absolute;
  top: 20%;
  left: 50%;
  margin-left: -260rpx;
  border-radius: 20rpx;

  background-color: #fff;
  text-align: center;
    display: block;
    padding: 120rpx 110rpx 120rpx 110rpx;
} 

.openTitle{
  font-size: 50rpx;
  color: #595858;
  padding-bottom: 20rpx;
} 

.openContent{
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #737273;
}

.openButton{
    border-radius: 10rpx;
  text-align: center;
  margin: auto;
  margin-top: 70rpx;
  font-size: 40rpx;
  height: 70rpx;
  width: 300rpx;
  background-color: #fe4c40;
    align-items:center;
    padding-top: 30rpx;
}

.openButton text{
  position: relative;
  color: #fff;
} 

.detailText{
  margin-bottom: 20rpx;
}

.firstOpenOpacity{
  display: none;
}

 .icon{
   height: 30rpx;
   width: 35rpx;
}


@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .3s ease-in both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .3s ease-in both;
}
.disappear{
    display: none;
}





.item{
    background-color: #fff;
    display: flex;
    padding:30rpx 0rpx 30rpx 20rpx;
    border-bottom: 2rpx solid #eee;
}

.item-left{
  width: 22%;
  float: left;
}

.item-middle{
  width: 32%;
  float: left;
  margin-left: 30rpx;
}

.item-right{
  width: 50%;
  float: right;
}

.teacherPhoto{
    width: 150rpx;
    height: 150rpx;
}


.name-trait{
  height: 40rpx;
}


.teacher-name{
    font-size: 35rpx;
    float: left;
}

.trait{
  margin: 5rpx;
    width:90rpx;
    height:30rpx;
    border:1rpx solid #fe4c40;
    border-radius:20rpx;
    font-size: 28rpx;
