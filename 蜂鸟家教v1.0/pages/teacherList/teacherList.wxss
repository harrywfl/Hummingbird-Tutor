}

.teacher-university,.item .teacher-score{
  display: flex;

    font-size: 32rpx;
    color: #737373;
    margin-top: 15rpx;
}



.teach-course{
  color: #fe4c40;
  margin: 55rpx 10rpx;

}

.teach-course text{
  margin-left: 20rpx;
}


.loading-indicator{
  width: 100%;
  font-size: 30rpx;
