
 page{
   height: 100%;
 }
.page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    height: 100%;
    background: #fff;
   
}

.chose{
    margin: 50rpx 0rpx 30rpx 0rpx;
    display: flex;
    justify-content: center;
}

.find-teacher,.become-teacher {
    padding-top: 28rpx;
    text-align: center;
    width: 140px;
    height: 38px;
    display: inline-block;
    margin:20rpx;
    color: #fff;
    font-size: 40rpx;
}

.find-teacher{
    background: #c4c4c4;
}


.become-teacher{
    background: #fe4c40;
}

.column{
  position: relative;
    align-items:center;
  display: flex;
  margin: 40rpx 0rpx 0rpx 2.5%;
  width: 95%;
  padding: 15rpx 0rpx 15rpx 0rpx;
  border: 1rpx solid #fe4c40;
  border-radius: 50rpx;
}



.photo{
  margin: 50rpx 0rpx 30rpx 30rpx;
  height: 150rpx;
  width: 150rpx;

}

.tip-photo{
  height: 50rpx;
  width: 150rpx;
  background-color: #fe4c40;
  color: #fff;
  font-size: 35rpx;
  border-radius: 0rpx 35rpx 35rpx 0rpx;
  padding: 10rpx 15rpx 10rpx 30rpx;
  background: linear-gradient(to  right, #fe8300 , #fe4c40);
}



.inputColumn{
  width: 55%;
  font-size: 35rpx;
}

.tip{
    font-size: 35rpx;
    color: #fe4c40;
    width: 180rpx;
    
}

.registerIcon{
  height: 50rpx;
  width: 50rpx;
  margin: 0rpx 10rpx 0rpx 20rpx;
}

.course-check{
   text-align:center;
    display:inline-block;
  margin: 0 auto;
}

.courseItem{
  margin:8rpx;
  /* padding: 15rpx 25rpx 15rpx 25rpx; */
  background-color: #efefef;
  float:left;
  border-radius: 40rpx;
  display:inline;
  color: #c6c4c4;
}

.grey{
  color:#545454;
}



.inputRemark{
    float: right;
    font-size: 35rpx;
    width:100%;
    padding: 0rpx 15rpx 0rpx 15rpx;
}

.inputRemark textarea{
  width:95%;

}


gallery {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
}

/*每张图片所占容器*/
.item {
    position: relative;
    display: inline;
}


/*小图片*/
.thumb {
	margin: 10rpx;
  position: relative;
}

/*删除按钮*/
.delete {
	position: absolute;
	height: 40rpx;
  right:0;
	width: 40rpx;
}

.delete image {
	position: absolute;
	width: 30rpx;
	height: 30rpx;
}

.image{
 text-align: center;
 font-size: 35rpx;
 margin: 30rpx 0rpx 20rpx 0rpx;
}

.submitButton{
    
    width:80%;
    height:90rpx;
    background-color:#fe4c40;
    border-radius:30px;
  
    color:#fff;
   margin: auto;
   margin-bottom: 30rpx;
  display:flex;
    justify-content:center;
    align-items:center;
}

.rightArrow{
  position: absolute;
  right: 15rpx;
  width:35rpx;
  height:35rpx;
  float:right;
}

.rightArrowPhoto{
position: absolute;
right: 15rpx;
margin-top: 50rpx;
  width:35rpx;
  height:35rpx;
  float:right;
}